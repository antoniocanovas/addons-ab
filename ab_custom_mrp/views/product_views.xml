<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="abasto_product_template_form_view" model="ir.ui.view">
        <field name="name">Abasto Product Template  FORM View</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="elaboracion" string="Elaboración">
                    <group>
                        <field name="nombre_etiqueta"/>
                        <field name="ingrediente"/>
                        <field name="conservante"/>
                        <field name="alergeno"/>
                        <field name="consumo"/>
                        <field name="conservacion"/>
                        <field name="qr_url"/>
                        <field name="qr_image" widget="image"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Que cualquiera de facturación pueda ver las cuentas contables de producto -->
    <record id="abasto_product_ver_cuenta_contable_form_view" model="ir.ui.view">
        <field name="name">Abasto Product Template  FORM View</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </xpath>
            <field name="property_account_income_id" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </field>
            <field name="property_account_expense_id" position="attributes">
                <attribute name="groups">account.group_account_invoice</attribute>
            </field>
        </field>
    </record>




</odoo>