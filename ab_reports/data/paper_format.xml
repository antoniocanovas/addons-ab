<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_label_production" model="report.paperformat">
            <field name="name">Etiqueta Producción</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">100</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">1</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(6, 0, [
            ref('mrp.label_production_view_pdf'),]
            )]"/>
        </record>

        <record id="paperformat_small_label_production" model="report.paperformat">
            <field name="name">Etiqueta pequeña Producción</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">100</field>
            <field name="page_width">70</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1,70</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0,50</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(6, 0, [
            ref('ab_reports.small_label_production_report_document'),]
            )]"/>

        </record>
    </data>
</odoo>